<div class="forgot-password-container">
  <form action="/forgotpass/forgotPassword" method="post" id="forgotPasswordForm">
    <h1>Forgot Password</h1>
    <span>Please enter your email</span>
    <input type="email" name="email" placeholder="Email" />
    <div class="button-container">
      <button type="submit" name="resetPassword" id="resetPasswordBtn">Reset Password</button>
      <a href="/account" name="resetPassword" id="resetPasswordBtn">Back to Register/Login</a>
    </div>
    <p class="success-message"><%= messages.success ? messages.success : '' %></p>
    <p class="error-message"><%= messages.error ? messages.error : '' %></p>
  </form>
</div>
<link rel="stylesheet" href="/style/forgotPasswords.css" />

<script src="/script/forgotPasswords.js"></script>