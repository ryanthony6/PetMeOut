<div class="forgot-password-container">
  <form action="/forgotPassword" method="post" id="forgotPasswordForm">
    <h1>Forgot Password</h1>
    <span>Please enter your new Password</span>
    <input type="email" name="email" placeholder="Email" />
    <p class="error-message"><%= messages.error && messages.error.includes('Email is required') ? 'Email is required' : '' %></p>
    <input type="password" name="password" id="password" placeholder="Enter your new password" />
    <p class="error-message"><%= messages.error && messages.error.includes('Password is required') ? 'Password is required' : '' %></p>
    <input type="password" name="confirmNewPassword" id="confirmNewPassword" placeholder="Confirm your new password" />
    <p class="error-message"><%= messages.error && messages.error.includes('Passwords does not match') ? 'Passwords does not match' : '' %></p>
    <div class="button-container">
      <button type="submit" name="resetPassword" id="resetPasswordBtn">Reset Password</button>
      <button type="button" id="loginBtn" onclick="redirectToSignInUp()">Login</button>
    </div>
    <p class="success-message"><%= messages.success && messages.success.includes('Password updated successfully') ? 'Password updated successfully. Please login' : '' %></p>
    <p class="error-message"><%= messages.error && messages.error.includes('This is an admin account. Password cannot be changed.') ? 'This is an admin account. Password cannot be changed' : '' %></p>
    <p class="error-message"><%= messages.error && messages.error.includes('Email not found') ? 'Email not found' : '' %></p>
  </form>
</div>
<link rel="stylesheet" href="/style/forgotPasswords.css" />

<script src="/script/forgotPasswords.js"></script>